pKa=float(input("Enter the pKa of the acid:"))
conbase=random.random()
conbase2=float(conbase*1000)
conbase3=float(math.trunc(conbase2)/1000)
conacid=random.random()
conacid2=float(conacid*1000)
conacid3=float(math.trunc(conacid2)/1000)
conba=float(conbase3/conacid3)
conba2=math.log10(conba)
pH=float(pKa+conba2)
pH2=float(pH*1000)
pH3=float(math.trunc(pH2)/1000)
print("Your pKa is: "+str(pKa))
print("Randomly assigned conjugate base concentration is: "+str(conbase3)) 
print("Randomly assigned conjugate acid concentration is: "+str(conacid3))
print("The pH of this solution is: "+str(pH3))
