a=0
b=0
x=int(input("How many numbers do you need to check?"))
z=x+1
for i in range(1, z, 1):
    y=int(input("Enter a number: "))
    if(y%2==0):
        print(str(y)+" is an even number.")
        a=a+1
    elif(y%2!=0):
        print(str(y)+" is an odd number.")
        b=b+1
print("You entered "+str(a)+" even number(s).")
print("You entered "+str(b)+" odd number(s).")
